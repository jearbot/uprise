<div class="container mt-4">
  <a href="<%= new_message_template_path %>" class="btn btn-primary">Create a template</a>

  <table class="table table-bordered table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Cadence</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
      <% @message_templates.each do |template| %>
        <tr>
          <td><%= template.name %></td>
          <td><%= template.cadence %></td>
          <td><%= template.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      <%= paginate @message_templates %>
    </ul>
  </nav>
</div>
