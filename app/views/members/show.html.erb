<div class="container mt-4">
  <h1>Member Profile</h1>

  <%= form_for @member do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", value: @member.name %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control", value: @member.email %>
    </div>

    <div class="form-group">
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, class: "form-control", value: @member.phone_number %>
    </div>

    <div class="form-group">
      <%= f.label :archived %>
      <%= f.check_box :archived, class: "form-control", checked: @member.archived? %>
    </div>

    <%= f.submit "Save Changes" %>
  <% end %>
</div>
