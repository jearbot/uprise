<div class="container mt-4">
  <%= form_tag(members_path, method: :get) do %>
    <p> Search for a member </p>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag ("Search") %>
  <% end %>

  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th><%= link_to "Name", sort: "name" %></th>
        <th><%= link_to "Email", sort: "email" %></th>
        <th><%= link_to "Phone Number", sort: "phone_number" %></th>
        <th><%= link_to "Member Type", sort: "member_type" %></th>
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= member.name %></td>
          <td><%= member.email %></td>
          <td><%= member.normalized_phone_number %></td>
          <td><%= member.member_type %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      <%= paginate @members %>
    </ul>
  </nav>
</div>
