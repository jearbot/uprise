<div class="container mt-4">
  <%= form_for @user, url: user_path(@user), method: :patch do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="form-group">
    <%= button_to "Delete User", user_path(@user), method: :delete, disabled: (current_user == @user), class: "btn btn-danger", onclick: "return confirm('Are you sure you want to delete this user?');" %>
  </div>
</div>