<div class="container mt-4">

  <a href="<%= new_user_path %>" class="btn btn-primary">Create User</a>

  <table class="table table-bordered table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %> <%= link_to '(Edit)', user_path(user), 'data-turbolinks': false %></td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      <%= paginate @users %>
    </ul>
  </nav>
</div>
